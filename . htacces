# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(env|config|sql|htaccess)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Redirect to HTTPS if available
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
